{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": ["es6", "es7", "dom", "es2017.object", "es2018.promise"], //"es2017"
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "paths": {
      "app/*": ["./app/*"],
      "@app/*": ["src/*"]
    }
  },
  "include": [
    "src/*", "types/*"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
